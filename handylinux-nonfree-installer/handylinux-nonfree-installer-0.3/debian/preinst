#!/bin/sh
# preinst script for handylinux-nonfree-installer
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    install|upgrade)
        if [ -e /usr/local/bin/skype-installer ]; then
            echo "nettoyage des anciens scripts"
            rm /usr/local/bin/skype-installer /usr/local/bin/skype-installer-launcher
            rm /usr/local/bin/teamviewer-installer /usr/local/bin/teamviewer-installer-launcher
            ln -s /usr/bin/skype-installer-launcher /usr/local/bin/skype-installer-launcher
            ln -s /usr/bin/teamviewer-installer-launcher /usr/local/bin/teamviewer-installer-launcher
        fi
        echo "nettoyage des anciens scripts réalisé avec succès"
    ;;

    abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
