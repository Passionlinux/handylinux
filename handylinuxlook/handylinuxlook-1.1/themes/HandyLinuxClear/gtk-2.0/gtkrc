gtk-color-scheme = "fg_color:#444444\nbg_color:#dddddd\nbase_color:#eeeeee\ntext_color:#444444\nselected_bg_color:#41B1FF\nselected_fg_color:#eeeeee\ntooltip_bg_color:#444444\ntooltip_fg_color:#eeeeee"
gtk-auto-mnemonics = 1
gtk-icon-sizes = "gtk-button = 16,16"

style "default" {
	xthickness = 0
	ythickness = 0

	GtkButton::child-displacement-x = 0
	GtkButton::child-displacement-y = 0

	GtkButton::default-border = { 0, 0, 0, 0 }
	GtkCheckButton::indicator-size = 14
	GtkRadioButton::indicator-size = 14
	GtkPaned::handle-size = 6

	GtkRange::trough-border = 1
	GtkRange::slider-width = 13
	GtkRange::stepper-size = 12

	GtkScale::slider-length = 24
	GtkScale::trough-side-details = 1
	GtkScrollbar::min-slider-length = 35

	GtkMenuBar::internal-padding = 0
	GtkExpander::expander-size = 16
	GtkToolbar::internal-padding = 1
	GtkTreeView::expander-size = 14
	GtkTreeView::vertical-separator = 0
	GtkTreeView::odd_row_color = mix (0.98, shade (0.93, @base_color), @bg_color)

	GtkMenu::horizontal-padding = 0
	GtkMenu::vertical-padding = 2
	GtkWidget::link-color = "#41B1FF"
	GtkWidget::visited-link-color = "#555555"

	GtkScrolledWindow::scrollbar-spacing = 1
	
	GtkToolbar::shadow-type = GTK_SHADOW_NONE
	GtkMenuBar::shadow-type = GTK_SHADOW_NONE

	WnckTasklist::fade-overlay-rect = 0
	# The following line hints to gecko (and possibly other appliations)
	# that the entry should be drawn transparently on the canvas.
	# Without this, gecko will fill in the background of the entry.
	GtkEntry::honors-transparent-bg-hint = 1

	GtkEntry::progress-border = { 2, 2, 2, 2 }

	fg[NORMAL] = @fg_color
	fg[PRELIGHT] = @selected_fg_color
	fg[SELECTED] = @selected_fg_color
	fg[ACTIVE] = @fg_color
	fg[INSENSITIVE] = @fg_color

	bg[NORMAL] = @bg_color
	bg[PRELIGHT] = @selected_bg_color
	bg[SELECTED] = @selected_bg_color
	bg[INSENSITIVE] = @bg_color
	bg[ACTIVE] = @bg_color

	base[NORMAL] = @base_color
	base[PRELIGHT] = @bg_color
	base[ACTIVE] = @base_color
	base[SELECTED] = @selected_bg_color
	base[INSENSITIVE] = @bg_color

	text[NORMAL] = @text_color
	text[PRELIGHT] = @text_color
	text[ACTIVE] = @fg_color
	text[SELECTED] = @selected_fg_color
	text[INSENSITIVE] = @fg_color

	engine "murrine"
	{
		#options
		animation			= FALSE  # FALSE = disabled, TRUE = enabled
		border_shades		= {1.0,1.0}
		colorize_scrollbar	= TRUE  # FALSE = disabled, TRUE = enabled
		contrast			= 0.0   # 0.8 for less contrast, more than 1.0 for more contrast on borders
		glazestyle			= 0     # 0 = flat highlight, 1 = curved highlight, 2 = concave style, 3 = top curved highlight, 4 = beryl highlight
		glow_shade			= 1.0
		glowstyle			= 3
		gradient_shades		= {1.1,1.1,1.1,1.1}
		highlight_shade		= 1.0
		listviewheaderstyle	= 0     # 0 = flat, 1 = glassy, 2 = raised
		listviewstyle		= 0     # 0 = nothing, 1 = dotted
		menubaritemstyle	= 0     # 0 = menuitem look, 1 = button look
		menubarstyle		= 0     # 0 = flat, 1 = glassy, 2 = gradient, 3 = striped
		menuitemstyle		= 0     # 0 = flat, 1 = glassy, 2 = striped
		menustyle			= 0     # 0 = no vertical menu stripe, 1 = display vertical menu stripe
		progressbarstyle	= 0     # 0 = flat, 1 = striped, 2 = blocks
		reliefstyle			= 0     # 0 = flat, 1 = inset, 2 = shadow
		rgba				= TRUE  # FALSE = disabled, TRUE = enabled
		roundness			= 0     # 0 = squared, 1 = old default, more will increase roundness
		scrollbarstyle		= 0     # 0 = nothing, 1 = circles, 2 = handles, 3 = diagonal stripes, 4 = diagonal stripes and handles, 5 = horizontal stripes, 6 = horizontal stripes and handles
		sliderstyle			= 0     # 0 = nothing added, 1 = handles
		stepperstyle		= 1     # 0 = standard, 1 = integrated stepper handles, 2 = unknown
		toolbarstyle		= 0     # 0 = flat, 1 = glassy, 2 = gradient
		#focusstyle			= 2
		gradient_colors		= FALSE
		border_colors		= FALSE
		cellstyle			= 0
		comboboxstyle		= 0
		expanderstyle		= 0
	}
}

