style "ComboButton" = "default"
{
  xthickness            			= 0
  ythickness            			= 0

  base[NORMAL] =      "#fff"
  base[INSENSITIVE] = "#fafafa"
  text[INSENSITIVE] = "#bfbfbf"
  fg[PRELIGHT] 		= "#ffffff" 


}





style "ComboBox"	= "default"
{

  xthickness            			= 0
  ythickness            			= 0

  
 
  engine "pixmap"
  {
    

    

    image
    {
      function			= FOCUS
       detail			= "entry"
      recolorable		= TRUE
      file			= "Combo/entry-shadow-in.png"
      border			= { 3,3,3,3 }
      stretch			= TRUE
    }	
 image
    {
      function			= BOX
      detail			= "entry"
      recolorable		= TRUE
	 shadow			= IN
      state			= NORMAL
      file			= "Combo/entry-shadow-in.png"
      border			= { 3,3,3,3 }
      stretch			= TRUE
    }	
	
  image
   {
     function			= SHADOW
     detail			= "entry"
     shadow			= IN
     recolorable		= FALSE
     file			= "Combo/text-entry.png"
     border			= { 3,3,3,3 }
     stretch			= TRUE
    }
  }}
